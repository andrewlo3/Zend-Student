<?php
$title = 'Add new student';
$this->headTitle($title);
?>
<h1><?= $this->escapeHtml($title) ?></h1>
<?php
// This provides a default CSS class and placeholder text for the id element:
$student = $form->get('id');
$student->setAttribute('class', 'form-control');
$student->setAttribute('placeholder', 'Student id');    

// This provides a default CSS class and placeholder text for the name element:
$name = $form->get('name');
$name->setAttribute('class', 'form-control');
$name->setAttribute('placeholder', 'Student name');

// This provides a default CSS class and placeholder text for the gpa element:
$gpa = $form->get('gpa');
$gpa->setAttribute('class', 'form-control');
$gpa->setAttribute('placeholder', 'Student gpa');

// This provides CSS classes for the submit button:
$submit = $form->get('submit');
$submit->setAttribute('class', 'btn btn-primary');

$form->setAttribute('action', $this->url('student', ['action' => 'add']));
$form->prepare();

echo $this->form()->openTag($form);
?>
<?php // Wrap the elements in divs marked as form groups, and render the
      // label, element, and errors separately within ?>
<div class="form-group">
    <?= $this->formLabel($student) ?>
    <?= $this->formElement($student) ?>
    <?= $this->formElementErrors()->render($student, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($name) ?>
    <?= $this->formElement($name) ?>
    <?= $this->formElementErrors()->render($name, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($gpa) ?>
    <?= $this->formElement($gpa) ?>
    <?= $this->formElementErrors()->render($gpa, ['class' => 'help-block']) ?>
</div>

<?php
echo $this->formSubmit($submit);
//echo $this->formHidden($form->get('id'));
echo $this->form()->closeTag();